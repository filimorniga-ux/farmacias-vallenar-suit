{
    "mcpServers": {
        "github": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-github"
            ],
            "env": {
                "GITHUB_PERSONAL_ACCESS_TOKEN": "REPLACE_WITH_YOUR_PAT"
            }
        },
        "timescale": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-postgres",
                "postgres://tsdbadmin:PASSWORD@HOST:PORT/tsdb?sslmode=require"
            ]
        },
        "vercel": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-vercel"
            ],
            "env": {
                "VERCEL_API_TOKEN": "REPLACE_WITH_YOUR_VERCEL_TOKEN"
            }
        }
    },
    "java.enabled": false,
    "java.errors.incompleteClasspath.severity": "ignore",
    "java.project.resourceFilters": [
        "node_modules",
        ".git"
    ],
    "files.exclude": {
        "**/.DS_Store": true,
        "**/node_modules/@capacitor/android": true,
        "**/android/capacitor-cordova-android-plugins": true
    },
    "yaml.schemas": {
        "https://json.schemastore.org/github-workflow.json": ".github/workflows/*.yml"
    },
    "files.watcherExclude": {
        "**/node_modules/**": true,
        "**/android/**": true,
        "**/ios/**": true
    },
    "java.import.exclusions": [
        "**/node_modules/**",
        "**/android/**"
    ],
    "css.lint.unknownAtRules": "ignore"
}